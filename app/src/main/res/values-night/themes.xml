<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme -->
    <style name="Theme.VoiceNotes" parent="Theme.Material3.DayNight">
        <!-- Primary brand color (keep same for consistency) -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Dark background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/white</item>
    </style>

</resources>