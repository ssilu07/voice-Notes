<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.VoiceNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/white</item>

        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Alternative theme using AppCompat (fallback) -->
    <style name="Theme.VoiceNotes.AppCompat" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/secondary_500</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.VoiceNotes.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_mic</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.VoiceNotes</item>
    </style>

    <!-- No ActionBar theme for activities that use Toolbar -->
    <style name="Theme.VoiceNotes.NoActionBar" parent="Theme.VoiceNotes">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
